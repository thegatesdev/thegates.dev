{
  "extends": "astro/tsconfigs/strictest",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "$icon/*": ["src/media/icons/*"],
      "$comp/*": ["src/modules/components/*"],
      "$layout/*": ["src/modules/layouts/*"],
      "$part/*": ["src/modules/parts/*"],
      "$page/*": ["src/pages/*"],
      "$style/*": ["src/styles/*"]
    }
  }
}
