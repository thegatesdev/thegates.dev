{
  "extends": "astro/tsconfigs/strictest",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "sourceMap": true,
    "paths": {
      "$icon/*": ["src/media/icons/*"],
      "$img/*": ["src/media/images/*"],
      "$mod/*": ["src/modules/*"],
      "$layout/*": ["src/layouts/*"],
      "$style/*": ["src/styles/*"],
      "$lib": ["src/content.lib.ts"],
    }
  }
}
