---
import NavLink from "$comp/NavLink.astro";
---

<nav class="navigation">
  <ol role="list">
    <NavLink href="/posts/home">Home</NavLink>
    <NavLink href="/posts">All Posts</NavLink>
    <NavLink href="/tags">All Tags</NavLink>
  </ol>
  <ol role="list">
    <NavLink href="/tags/about">#about</NavLink>
    <NavLink href="/tags/blog">#blog</NavLink>
    <NavLink href="/tags/art">#art</NavLink>
  </ol>
</nav>

<style is:global>
  .navigation {
    display: flex;
    flex-direction: column;
    gap: var(--space-section-2);

    text-align: right;
    min-width: max-content;
  }
  @media screen and (max-width: 768px) {
    .navigation {
      text-align: left;
      flex-direction: row;
      justify-content: space-around;
    }
  }
</style>
