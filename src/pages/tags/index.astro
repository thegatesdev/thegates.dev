---
import Page from "$layout/Page.astro";
import { getTags, sortTagsByName } from "src/content.lib";

const tags = await getTags();
tags.sort(sortTagsByName);
---

<Page name="All Tags" description="View all content tags by thegatesdev">
  <h2>All Tags</h2>
  <ul role="list">
    {
      tags.map((tag) => (
        <li>
          <a href={`/tags/${tag.id}`}>{`#${tag.id}`}</a>
        </li>
      ))
    }
  </ul>
</Page>
